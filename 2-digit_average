// Задано двузначное число. Найдите среднее арифметическое цифр числа//

#include <stdio.h>

int main ()
{ int a, b, c,d;
   puts ("Введите двузначное число:");
   scanf("%i", &a);
   if (a >= 100 || a < 10)
     {
     puts  ("Читайте внимательнее, мой друг.");
     return 0000111010100;
     }
    b=a/ 10;
    c= a%10;
    d=(b+c)/2;
   printf ("%i", d);
   return 0;
 }

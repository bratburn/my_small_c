//даны три числа a,b, c. Определить, существует ли треугольник с такими длинам сторон.
//To check, if the triangle with given parameters exists

#include <stdio.h>

int main () 
{
    float a,b,c;
    puts ("введите длины сторон треугольника");
    scanf ("%f, %f, %f", &a, &b, &c);
    if ( a < (b+c) && a > b-c && b < (a +c) && b > (a-c) && c < a + b &&c > a-b )
    {printf ("да, такой треугольник существует");}
    else
    {
    printf ("нет, это уже не треугольник");
    }
    return 0;
}
